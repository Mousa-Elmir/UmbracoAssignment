@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using Umbraco.Cms.Core.Models.Blocks

@{
    var heading = Model.Content.Value<string>("heading");
    var subheading = Model.Content.Value<string>("subheading");
    var services = Model.Content.Value<BlockListModel>("services");
}

<section class="services-section">
    <div class="container">
        <div class="section-header">
            <h2>@heading</h2>
            <p>@subheading</p>
        </div>
        
        @if (services != null && services.Any())
        {
            <div class="services-grid">
                @foreach (var service in services)
                {
                    var title = service.Content.Value<string>("serviceTitle");
                    var description = service.Content.Value<string>("serviceDescription");
                    var image = service.Content.Value<IPublishedContent>("serviceImage");
                    var link = service.Content.Value<Umbraco.Cms.Core.Models.Link>("serviceLink");
                    
                    <div class="service-card">
                        @if (image != null)
                        {
                            <img src="@image.Url()" alt="@title" />
                        }
                        <h3>@title</h3>
                        <p>@description</p>
                        @if (link != null && !string.IsNullOrEmpty(link.Url))
                        {
                            <a href="@link.Url">@link.Name</a>
                        }
                    </div>
                }
            </div>
        }
    </div>
</section>